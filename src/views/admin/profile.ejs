<%- include('../partials/header', { title: "Meu Perfil - Moovox" }) %>
<link rel="stylesheet" href="/css/dashboard.css">

<div id="loading-screen">
  <div class="loading-content">
    <div class="spinner"></div>
    <p class="loading-message">Carregando Moovox...</p>
  </div>
</div>

<div class="d-flex">
  <%- include('../partials/sidebar') %>

  <main class="flex-grow-1 p-4 bg-leather-main">
    <h2 class="mb-4 text-white fw-bold">Meu Perfil</h2>

    <div class="row">
      <!-- Card de Informações Pessoais -->
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm border-0 agro-card-green fade-delay-1">
          <div class="card-header bg-dark text-white">
            <i class="bi bi-person-badge-fill me-2"></i>Informações Pessoais
          </div>
          <div class="card-body text-white">
            <p><strong>Nome:</strong> <%= user.name %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
            <p><strong>Função:</strong> <%= user.role %></p>
          </div>
        </div>
      </div>

      <!-- Card de Foto de Perfil -->
      <div class="col-md-6 mb-4">
        <div class="card shadow-sm border-0 agro-card-green fade-delay-2">
          <div class="card-header bg-dark text-white">
            <i class="bi bi-camera-fill me-2"></i>Foto de Perfil
          </div>
          <div class="card-body text-white text-center">
            <img src="<%= user.profile_photo %>" alt="Foto de Perfil" class="rounded-circle mb-3 foto-perfil" width="100" height="100" >
            <form action="/admin/profile/photo" method="POST" enctype="multipart/form-data">
              <input type="file" name="profile_photo" class="form-control mb-2" accept="image/*" required>
              <button type="submit" class="btn btn-outline-light">Atualizar Foto</button>
            </form>
          </div>
        </div>
      </div>

      <!-- Card de Edição de Dados -->
      <div class="col-md-12 mb-4">
        <div class="card shadow-sm border-0 agro-card-green fade-delay-3">
          <div class="card-header bg-dark text-white">
            <i class="bi bi-pencil-fill me-2"></i>Editar Dados
          </div>
          <div class="card-body text-white">
            <form action="/admin/profile/<%= user.id %>?_method=PUT" method="POST" >
              <div class="mb-3">
                <label for="name" class="form-label">Nome</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
              </div>
              <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
              </div>
              <div class="mb-3">
                <label for="password" class="form-label">Nova Senha (opcional)</label>
                <input type="password" class="form-control" id="password" name="password">
              </div>
              <button type="submit" class="btn btn-success fw-bold">Salvar Alterações</button>
            </form>
          </div>
        </div>
      </div>

    </div>
  </main>
</div>

<script src="/js/dashboard.js"></script>
<%- include('../partials/footer') %>
