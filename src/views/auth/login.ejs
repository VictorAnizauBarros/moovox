<%- include('../partials/header', { title: "Login - Moovox" }) %>
<link rel="stylesheet" href="css/login.css">

  
  <div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="login-card" style="width: 100%; max-width: 420px;">
      <div class="text-center">
        <img src="/images/logo-moovox-redimensionado.png" alt="Logo Moovox" class="logo">
        <h3 class="text-green">Bem-vindo ao Moovox</h3>
        <p class="text-muted mb-4">Gest√£o inteligente de animais no campo</p>
      </div>

      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="email" class="form-label">E-mail</label>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
            <input type="email" class="form-control" id="email" name="email" required autofocus autocomplete="off">
          </div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Senha</label>
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-lock"></i></span>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-primary">Entrar</button>
        </div>

        <div class="mt-3 text-center">
          <a href="/recuperar-senha">Esqueci minha senha</a>
        </div>
      </form>
    </div>
  </div>

